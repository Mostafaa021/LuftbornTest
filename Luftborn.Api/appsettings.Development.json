{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "EcommerceDbConnection": "Server=.;Database=EcommerceDb;MultipleActiveResultSets=true;Integrated Security=SSPI;Encrypt=false",
    "EcommerceDbLogConnection": "Server=.;Database=EcommerceDbLog;MultipleActiveResultSets=true;Integrated Security=SSPI;Encrypt=false",
    "Hangfire": "Server=.;Database=EcommerceDbLog;MultipleActiveResultSets=true;Integrated Security=SSPI;Encrypt=false"
  },
  "Serilog": {
    "SeqServerUrl": "http://localhost:5341",
    "SeqServerToken": "Pu1cCql2kDOdWzMRbiFf",
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{NewLine}{Timestamp:dd/MM/yyyy HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine:1}{Exception:1}{NewLine} {Properties:j}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:/EcommerceTestApp/Development/Logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId",
      "WithExceptionDetails"
    ],
    "Properties": {
      "ApplicationName": "Ecommerce TestApp"
    }
  },
  "AllowedHosts": "*"
}
